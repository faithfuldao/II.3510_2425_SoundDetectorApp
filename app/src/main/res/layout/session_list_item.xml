<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

        <!-- Session ID -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Session ID: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/session_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123" />
        </LinearLayout>

        <!-- Start Time -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Startzeit: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024-10-18 12:00:00" />
        </LinearLayout>

        <!-- Average Decibel -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Durchschnittlicher Dezibel: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/avg_decibel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="65.4 dB" />
        </LinearLayout>

        <!-- Maximum Decibel -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maximaler Dezibel: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/max_decibel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="98.7 dB" />
        </LinearLayout>

</LinearLayout>
